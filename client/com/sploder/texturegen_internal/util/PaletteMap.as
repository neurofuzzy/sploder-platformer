package com.sploder.texturegen_internal.util {	import flash.display.BitmapData;			/**	 * @author Ralph Hauwert	 */	public class PaletteMap {				public var redArray:Array;		public var greenArray:Array;		public var blueArray:Array;		public var alphaArray:Array;				public function PaletteMap(redArray:Array, greenArray:Array, blueArray:Array, alphaArray:Array)		{			this.redArray = redArray;			this.greenArray = greenArray;			this.blueArray = blueArray;			this.alphaArray = alphaArray;		}		public function applyTo(bitmapData:BitmapData):void {			bitmapData.paletteMap(bitmapData, bitmapData.rect, BitmapDataUtil.ORIGIN, redArray, greenArray, blueArray, alphaArray);		}	}}